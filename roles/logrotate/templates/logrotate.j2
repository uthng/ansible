{% for file in item.files %}
{{ file }}
{% endfor %}
{
{% if item.options is not defined %}
  {{ logrotate_default_options | indent(2) }}
{% else %}
{% for option in item.options %}
  {{ option }}
{% endfor %}
{% endif %}
{% if item.postrotate is defined %}
  postrotate
    {{ item.postrotate }}
  endscript
{% endif %}
{% if item.prerotate is defined %}
  prerotate
    {{ item.prerotate }}
  endscript
{% endif %}
{% if item.firstaction is defined %}
  firstaction
    {{ item.firstaction }}
  endscript
{% endif %}
{% if item.lastaction is defined %}
  lastaction
    {{ item.lastaction }}
  endscript
{% endif %}
{% if item.preremove is defined %}
  preremove
    {{ item.preremove }}
  endscript
{% endif %}
}
